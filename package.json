{
	"name": "@prismamedia/player",
	"version": "1.0.0",
	"description": "Prisma Media player with Dailymotion and CoreAds",
	"bugs": "https://github.com/prismamedia/player/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/prismamedia/player.git"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./src/index.ts"
		}
	},
	"main": "./src/index.ts",
	"files": [
		"src"
	],
	"scripts": {
		"biome:check": "biome check",
		"biome:fix": "biome check --write",
		"build": "tsc",
		"dev": "tsc --watch",
		"dev:unit": "rm -rf ./coverage/ && jest --config ./config/jest.config.js --watchAll --coverage",
		"test:markdown": "markdownlint-cli2 '**/*.md'",
		"test:qa": "npm run biome:check && npm run test:types && npm run test:markdown",
		"test:types": "tsc",
		"test:unit": "rm -rf ./coverage/ && jest --config ./config/jest.config.js --verbose --coverage"
	},
	"dependencies": {
		"typescript": "^5.9.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/jest": "^30.0.0",
		"jest": "^30.1.3",
		"jest-environment-jsdom": "^30.1.2",
		"jest-junit": "16.0.0",
		"markdownlint-cli2": "^0.18.1",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.4"
	},
	"engines": {
		"node": ">=20.18.0"
	}
}
