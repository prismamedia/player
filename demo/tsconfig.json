{
	"compilerOptions": {
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": false,
		"target": "es2020",
		"strict": true,
		"esModuleInterop": true,
		"declaration": false,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*.ts"]
}
